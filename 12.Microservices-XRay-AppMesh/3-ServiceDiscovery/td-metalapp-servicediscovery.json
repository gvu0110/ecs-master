{
    "executionRoleArn": "arn:aws:iam::157117204602:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::157117204602:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "/ecs/microservice-demo",
                  "awslogs-region": "ca-central-1",
                  "awslogs-stream-prefix": "ecs"
                }
            },
            "portMappings": [
                {
                    "protocol": "tcp",
                    "containerPort": 80
                }
            ],
            "environment": [
                {
                    "name": "PORT",
                    "value": "80"
                }
            ],
            "memory": 128,
            "image": "gkoenig/metalapp:latest",
            "essential": true,
            "name": "metalapp"
        },
        {
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "/ecs/microservice-demo",
                  "awslogs-region": "ca-central-1",
                  "awslogs-stream-prefix": "metal/xray"
                }
            },
            "portMappings": [
            {
              "protocol": "udp",
              "containerPort": 2000
            }
          ],
          "cpu": 32,
          "memoryReservation": 256,
          "image": "amazon/aws-xray-daemon",
          "name": "xray-daemon"
        }
    ],
    "family": "td-metalapp",
    "requiresCompatibilities": [
        "EC2"
    ],
    "networkMode": "awsvpc"
}
